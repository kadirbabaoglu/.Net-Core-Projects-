@model Products
@{
    ViewData["Title"] = "Create";
}

<form asp-controller="Home" asp-action="Edit" method="post" novalidate enctype="multipart/form-data">
    
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="ProductId" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <img src="~/img/@Model.Image"  style="width : 100px"/>
        <input type="type" type="hidden" asp-for="Image" />
    </div>

    <div class="mb-3">
        <label for="formFile" class="form-label">Resim Seç</label>
        <input class="form-control" type="file" id="formFile" name="imageFile">
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Ürün Açıklaması</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description"></span>

    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Ürün Fiyat</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price"></span>

    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Ürün Kategori</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.AllCategories" class="form-select">
                <option value="">Kategori Şeç</option>
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input"     asp-for="IsActive">
        <label class="form-check-label" asp-for="IsActive"> Ürün Aktif / Pasif </label>
        <span asp-asp-validation-for="IsActive"></span>

    </div>
    <button class="btn btn-primary btn-sm">Kaydet</button>


</form>