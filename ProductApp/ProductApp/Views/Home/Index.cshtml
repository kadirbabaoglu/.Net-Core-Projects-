@model List<Products>
@{
    ViewData["Title"] = "Home Page";
}


<div class="card card-body my-3">
    <form asp-action="Index" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <select name="category" class="form-select"  asp-items="@ViewBag.category">
                        <option value="0">Hepsi</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
            </div>
        </div>
    </form>
</div>


<div class="text-center">
   
    <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>
                <td style="width : 100px">Ürün ID</td>
                <td style="width : 100px">Ürün Adı</td>
                <td style="width : 100px">Ürün Resmi</td>
                <td style="width : 100px">Ürün Fiyat</td>
                <td>Ürün Açıklama</td>
                <td style="width : 200px"></td>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Name</td>
                    <td><img src="~/img/@item.Image" class="img-fluid" /></td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="">Güncelle</a>
                        <a class="btn btn-danger btn-sm" href="">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
