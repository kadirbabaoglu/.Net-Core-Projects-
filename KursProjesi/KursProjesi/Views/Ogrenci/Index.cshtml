@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Index";
}

<h3>Ögrenci Listesi</h3>
<hr />
<a class="btn btn-outline-success mb-3" href="/Ogrenci/Create">Yeni Öğrenci Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(n => n.OgrenciId)</th>
            <th>@Html.DisplayNameFor(n => n.OgrenciAdi)</th>
            <th>@Html.DisplayNameFor(n => n.OgrenciSoyadi)</th>
            <th>@Html.DisplayNameFor(n => n.Eposta)</th>
            <th>@Html.DisplayNameFor(n => n.Telefon)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OgrenciId</td>
                <td>@item.OgrenciAdi</td>
                <td>@item.OgrenciSoyadi</td>
                <td>@item.Eposta</td>
                <td>@item.Telefon</td>
                <td>
                    <a asp-controller="Ogrenci" asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-primary">Güncelle</a>
                    <a asp-controller="Ogrenci" asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
            
        }
        
    </tbody>
</table>
