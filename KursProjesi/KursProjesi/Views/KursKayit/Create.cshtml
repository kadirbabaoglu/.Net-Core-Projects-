@model KursKayit
@{
    ViewData["Title"] = "Create";
}

<h3>Öğrenci Kayıt Formu</h3>

<form asp-controller="KursKayit" asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Öğrenci </label>
        <select asp-for="OgrenciId" asp-items="ViewBag.Ogrenciler" class="form-control"> </select>
    </div>

    <div class="mb-3">
        <label asp-for="KursId" class="form-label">Kurs </label>
        <select asp-for="KursId" asp-items="ViewBag.Kurslar" class="form-control"> </select>
    </div>

   
    <button type="submit" class="btn btn-outline-primary">Kaydet</button>

</form>