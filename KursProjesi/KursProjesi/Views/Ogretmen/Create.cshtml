@model Ogretmen
@{
    ViewData["Title"] = "Create";
}

<h3>Öğretmen Kayıt Formu</h3>

<form asp-controller="Ogretmen" asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="Adi" class="form-label">Öğrenci Adı</label>
        <input asp-for="Adi" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Soyadi" class="form-label">Öğrenci Soyadı</label>
        <input asp-for="Soyadi" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Eposta" class="form-label">Eposta Adresi</label>
        <input asp-for="Eposta" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Telefon Numarası</label>
        <input asp-for="Telefon" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="BaslamaTarihi" class="form-label">Telefon Numarası</label>
        <input asp-for="BaslamaTarihi" class="form-control" />
    </div>

    

    <button type="submit" class="btn btn-outline-primary">Kaydet</button>

</form>