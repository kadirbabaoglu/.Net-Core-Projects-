@model Ogretmen
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<h3>Öğrenci Kayıt Formu</h3>

<div class="row">
    <div class="col-8">

        <form asp-controller="Ogretmen" asp-action="Edit" method="post">
            <input asp-for="OgretmenID" type="hidden" />

            <div class="mb-3">
                <label asp-for="Adi" class="form-label">Öğrenci Adı</label>
                <input asp-for="Adi" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Soyadi" class="form-label">Öğrenci Soyadı</label>
                <input asp-for="Soyadi" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Eposta" class="form-label">Eposta Adresi</label>
                <input asp-for="Eposta" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Telefon Numarası</label>
                <input asp-for="Telefon" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="BaslamaTarihi" class="form-label">Telefon Numarası</label>
                <input asp-for="BaslamaTarihi" class="form-control" />
            </div>

            <button type="submit" class="btn btn-outline-primary">Kaydet</button>

        </form>
    </div>
    <div class="col-4">
        <h4>Kayıtlı Kurslar</h4>
        <hr />
        <ul>
           
        </ul>
    </div>
</div>

